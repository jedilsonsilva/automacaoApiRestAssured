{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "productType": {
          "type": "string"
        },
        "productAdditionalInfo": {
          "type": "string"
        },
        "creditCardNetwork": {
          "type": "string"
        },
        "networkAdditionalInfo": {
          "type": "string"
        },
        "paymentMethod": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "identificationNumber": {
                  "type": "string"
                },
                "isMultipleCreditCard": {
                  "type": "boolean"
                }
              },
              "required": [
                "identificationNumber",
                "isMultipleCreditCard"
              ]
            }
          ]
        }
      },
      "required": [
        "name",
        "productType",
        "productAdditionalInfo",
        "creditCardNetwork",
        "networkAdditionalInfo",
        "paymentMethod"
      ]
    },
    "links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "string"
        },
        "first": {
          "type": "string"
        },
        "prev": {
          "type": "string"
        },
        "next": {
          "type": "string"
        },
        "last": {
          "type": "string"
        }
      },
      "required": [
        "self",
        "first",
        "prev",
        "next",
        "last"
      ]
    },
    "meta": {
      "type": "object",
      "properties": {
        "totalRecords": {
          "type": "integer"
        },
        "totalPages": {
          "type": "integer"
        },
        "requestDateTime": {
          "type": "string"
        }
      },
      "required": [
        "totalRecords",
        "totalPages",
        "requestDateTime"
      ]
    }
  },
  "required": [
    "data",
    "links",
    "meta"
  ]
}